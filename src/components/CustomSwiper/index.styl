.swiper {
  width: 100%;
  height: 248px;
  position: relative;

  &__wrap {
    width: auto;
    height: inherit;
    border-radius: 20px;
    transform: scale(0.9);
    transition: all 0.5s ease;
    overflow: hidden

    &.active {
      transform: scale(1);
    }
  }

  &__img {
    width: 100%;
    height: inherit;
    border-radius: 20px;
  }

  &__text {
    position: absolute;
    bottom: 0;
    padding-left: 20px;
    box-sizing: border-box;
    width: 100%;
    height: 78px;
    line-height: 78px;
    font-weight: 500;
    font-size: 32px;
    color: #fff;
    border-radius: 0px 0px 20px 20px;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.9) 100%);
  }
}

