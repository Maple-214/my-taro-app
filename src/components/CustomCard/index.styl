.card-wrap
  display: flex
  flex-wrap: wrap
  .card-items
    display: flex
    flex-direction: column;
    justify-content: center
    align-items: center
    width: calc(33.33333% - 15.5px);
    margin-right: 18px;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 20px;
    background: #f8f8f8;
    border: 2px solid #e5e5e5;
    &:nth-child(3n)
      margin-right: 0
    .cover
      width 100%
      height: 110px
      object-fit: cover;
    .text
      width: 100%;
      border: none;
      left: 0;
      background: rgba(0, 0, 0, .6);
      color: #fff;
      z-index: 10;
      text-align: center;
      font-size: 24px;
      font-weight: 400;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      line-height: 40px;
      height: 40px;